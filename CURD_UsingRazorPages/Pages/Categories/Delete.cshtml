@page
@model CURD_UsingRazorPages.Pages.Categories.DeleteModel

<div class="container">
	<div class="row">
		<h3 class="text-primary">Remove Category</h3>
		<hr/>
	</div>

	<form method="post" class="border p-2">
		<div class="m-2">
			<div asp-validation-summary="All"></div>
		</div>
		<input asp-for="@Model.category.Id" hidden />
		<div class="m-2">
			<label asp-for="@Model.category.Name"></label>
			<input asp-for="@Model.category.Name" class="form-control" disabled />
		</div>
		<div class="m-2">
			<label asp-for="@Model.category.DisplayOrder"></label>
			<input asp-for="@Model.category.DisplayOrder" class="form-control" disabled />
		</div>

		<div class="row mt-4">
			<div class="col-6">
			<button class="btn btn-outline-success" type="submit">Remove</button>
			</div>
			<div class="text-end col-6">
				<a class="btn btn-outline-primary" asp-page="Index">Back to List</a>
			</div>
		</div>

	</form>

</div>
